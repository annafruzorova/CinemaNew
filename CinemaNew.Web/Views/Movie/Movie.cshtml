@model List<CinemaNew.Logic.DB.Movies>

@if (Model.Count == 0)
{
    <b>There are no movies available!</b>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Category</th>
            <th>Name</th>
            <th>AvailableTime</th>
            <th></th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.CategoryId</td>
                <td>@movie.Name</td>
                <td>@movie.AvailableTime</td>
                <th><a asp-controller="Movie" asp-action="Create" asp-route-name="@movie.Name">Choose movie</a></th>
            </tr>
        }
    </table>
}

