@model CategoryModel

<ul class="nav nav-pills mb-3">
    @foreach (var category in Model.Category)
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Movie" asp-action="Category" asp-route-id="@category.Id"> @category.Name </a>
        </li>
    }
</ul>

@if (Model.ActiveCategory != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">@Model.ActiveCategory.Name </li>
        </ol>
    </nav>
}

@if (Model.Movies != null)
{
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card">
                    
                    <div class="card-body">
                        <a class="card-link" asp-controller="Movie" asp-action="Movie" asp-route-id="@movie.Id">@movie.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
