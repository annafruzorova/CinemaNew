@model List<CinemaNew.Logic.DB.Category>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Categories</li>
    </ol>
</nav>
<div class="row">

    @foreach (var category in Model)
    {
        <div class="col-md-4 col-sm-12 mb-3">
            <div class="card">
                <div class="card-body">
                    <a class="card-link" asp-controller="Movie" asp-action="Category" asp-route-id="@category.Id">@category.Name</a>
                </div>
                </div>
            </div>
                }
            </div>


